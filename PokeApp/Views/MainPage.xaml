<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:design="clr-namespace:PokeApp"
    BindingContext="{x:Static design:MainPageViewModel.Preview}"
    x:Class="PokeApp.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0, 15, 0, 0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Frame Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                x:Name="PokedexFrame">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapped"
                        NumberOfTapsRequired="1" />
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Vertical">
                    <Label Text="PokÃ©dex"
                        VerticalOptions="StartAndExpand" />
                    <Image x:Name="PokedexImage"
                        VerticalOptions="StartAndExpand"
                        Source="{Binding PokedexUrl}">
                    </Image>
                </StackLayout>
            </Frame>
            <Frame Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                x:Name="AboutFrame">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTapped"
                        NumberOfTapsRequired="1" />
                </Frame.GestureRecognizers>
                <StackLayout Orientation="Vertical">
                    <Label Text="About" />
                    <Image WidthRequest="300"
                        Source="{Binding AboutUrl}">
                    </Image>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>